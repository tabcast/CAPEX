								<Column id="_tblampli_c_estado_desc">    <header> <Label text="Descripción" id="_tblampli_lbl_ampliestado_desc"/>  		</header> </Column>
								<Column id="_tblampli_c_solicitud_tr">   <header> <Label text="Solicitud" id="_tblampli_lbl_amplisolicitud_tr"/> 		</header> </Column>
